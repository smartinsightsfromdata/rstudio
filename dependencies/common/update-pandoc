set -e

# install dir
INSTALL_DIR=`pwd`

# script dir
SCRIPT_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
cd $SCRIPT_DIR

# remove then re-install pandoc
PANDOC_VERSION=1.13.1
PANDOC_DIR=pandoc/$PANDOC_VERSION
rm -rf $PANDOC_DIR
./install-pandoc
$PANDOC_DIR/pandoc -D latex
$PANDOC_DIR/pandoc --version

# back to install dir
cd $INSTALL_DIR
